<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UnitRuler" parent="TimeHorizontalScrollView">
        <attr name="tickValue" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="TimeHorizontalScrollView">
        <attr name="SecondPrecision" format="integer"/>
        <attr name="MillisecondPrecision" format="integer"/>

        <attr name="mainTickDrawableId" format="integer|reference"/>
        <attr name="otherTickDrawableId" format="integer|reference"/>
        <attr name="tickPaddingRight" format="integer"/>
        <attr name="rulerPosition" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
        <attr name="pivotLineWidth" format="integer|reference"/>
        <attr name="pivotLineColor" format="color|reference"/>
        <attr name="defaultRectWidth" format="integer|reference"/>
        <attr name="defaultRectColor" format="color|reference"/>
        <attr name="tickValueColor" format="color|reference"/>
    </declare-styleable>

</resources>
